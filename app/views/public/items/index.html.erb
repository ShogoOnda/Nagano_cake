<div class="container my-5">
  <div class="row my-3">
    <div class="col-md-2">
      <div class="d-flex flex-column bd-highlight mb-3">
        <h6 class="font-weight-bold py-2 border-bottom border-dark">
          ジャンル一覧
        </h6>
        <% @genres.each do |genre| %>
            <%= link_to genre.name, items_path(genre_id: genre.id), class: "text-secondary" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-10">
      <div class="font-weight-bold">
        <h4 class="my-2">
          商品一覧 (全<%= @items.count %>件)
        </h4>
      </div>
      <div class="d-flex flex-column bd-highlight mb-3">
        <% @items.each do |item| %>
          <%= link_to item_path(item.id) do %>
            <div class="p-2 bd-highlight">
              <%= image_tag item.image, size: "200x200" %>
            </div>
          <% end %>
            <div class="p-2 bd-highlight">
              <%= item.name %>
            </div>
            <div class="p-2 bd-highlight">
              ￥<%= item.price %>
            </div>
        <% end %>
      </div>
  </div>
  <div class="row my-2">
    <div class="col-md-12 text-center">

    </div>
  </div>
</div>