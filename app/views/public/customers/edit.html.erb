<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        会員情報編集
      </h4>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_path(current_customer.id), method: :patch do |f| %>
    <div class="row my-3">
      <table class="table  table-borderless">
        <tbody>

            <th>氏名</th>
            <td>
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row my-3">
      <div class="col-md-4 text-center">
        <%= f.submit '編集内容を保存', class:"btn btn-success" %>
      </div>
      <div class="col-md-4 text-center">
      <%=link_to "退会する", unsubscribe_path(current_customer), class:"btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>