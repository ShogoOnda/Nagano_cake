<div class="container">
  <div class="row">
    <div class="col-md-auto mb-3 bg-light">
      <h4>商品詳細</h4>
    </div>
  </div>

    <div class="form-group">
      <label for="item_image"></label>
      <%= @item.image %>
    </div>

    <div class="form-group">
      <label for="item_name">商品名</label>
      <%= @item.name %>
    </div>

    <div class="form-group">
      <label for="item_introduction">商品説明</label>
      <%= @item.introduction %>
    </div>

    <div class="form-group">
