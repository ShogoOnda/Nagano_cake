<div class="container">
  <div class="row">
    <div class="col-md-auto mb-3 bg-light">
      <h4>商品一覧</h4>
    </div>
  </div>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
      <tbody>
        <tr>
          <td><%=item.id %></td>
          <td><%=link_to item.name, admin_item_path(item.id) %></td>
          <td><%=item.price %></td>
          <td><%=item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
              <div class="text-success">販売中</div>
            <% else item.is_active == false %>
              <div class="text-black-50">販売停止中</div>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>