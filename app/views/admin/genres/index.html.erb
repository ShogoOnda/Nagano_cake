<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-auto mb-5 bg-light">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 mb-5">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="field row mx-auto">
          <div class="col-md-2 col-form-label">
            <h6 class="genre_name">ジャンル名</h6>
          </div>
          <div class="col-md-3">
            <%= f.text_field :name, class: "form-control genre_name" %>
          </div>
          <div class="col-md-3">
            <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <% @genres.each do |genre| %>
      <tbody>
        <tr>
          <td><%=genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"  %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
      </div>
</div>
