<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-auto mb-5 bg-light">
      <h4>ジャンル編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 mb-5">
        <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <div class="field row mx-auto">
          <div class="col-md-2 col-form-label">
            <h6 class="genre_name">ジャンル名</h6>
          </div>
          <div class="col-md-3">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
