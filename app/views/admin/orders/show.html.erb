<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4><%= @customer.last_name %> <%= @customer.first_name %>さんの注文履歴</h4>
    </div>
  </div>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%=customer.id %></td>
          <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%=customer.email %></td>
          <td>
            <% if customer.is_deleted == false %>
              <div class="text-success">有効</div>
            <% else customer.is_delete == true %>
              <div class="text-black-50">退会</div>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>